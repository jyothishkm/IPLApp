<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

   >


    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="@dimen/card_view_height"
        app:cardCornerRadius="15dp"
        android:id="@+id/card_team"
        android:background="@drawable/rip"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="#E3F2FD"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/mText_team_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:text="jjjjjjj"
            android:textSize="@dimen/text_size"/>
        <ImageView
            android:id="@+id/mImage_team_logo"
            android:layout_width="@dimen/image_team_logo_width"
            android:layout_height="@dimen/image_team_logo_height"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/ipl_logo" />



        <TextView
            android:id="@+id/mText_team_owner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:gravity="center"
            android:text="mmmmm"
            android:maxLines="1"
            android:textSize="@dimen/text_size"/>


    </android.support.v7.widget.CardView>
</RelativeLayout>
